<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_video"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="#fff">
<FrameLayout
    android:layout_width="@dimen/picto_video_size"
    android:id="@+id/imageview_videoframe"
    android:layout_height="@dimen/picto_video_size"
android:layout_centerVertical="true"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/imageview_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_list" />

    <ImageView
        android:id="@+id/imageview_videomask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitCenter"
        android:src="@drawable/masque_video" />
</FrameLayout>





    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview_videoframe"
        android:layout_alignRight="@+id/imageview_videoframe"
        android:layout_margin="4dp"
        android:background="#38ffffff"
        android:padding="1dp"
        android:text="00:00"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_videoframe"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="eeeee"
            android:textColor="@color/natixis_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="eeeee"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="eeeee"
            android:textColor="@color/natixis_gray"
            android:textSize="13sp" />
    </LinearLayout>


</RelativeLayout>