<resources>

    <!-- Base application theme. -->
    <style name="NatixisTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:textAppearance">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/drawer</item>
        <item name="android:dropDownListViewStyle">@style/spinnerListViewStyle</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>


        <!-- <item name="android:textViewStyle">@style/TextView</item>-->
    </style>
    <style name="NatixisThemePdf" parent="@android:style/Theme.Holo.Light">
        </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/dark_gray</item>
    </style>

    <style name="ActionBar"  parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#F7F7F7</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.Holo.EditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="spinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/light_gray</item>
    </style>

    <style name="NatixisTheme.TextTitle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/button_gray</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">20dp</item>

    </style>

    <style name="NatixisTheme.TextInfo" parent="@android:style/TextAppearance" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#FFF</item>

        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="NatixisTheme.TextInfo.Value"  parent="@style/NatixisTheme.TextInfo">

        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#80807F</item>
    </style>

    <style name="NatixisTheme.TextInfo.Label"  parent="@style/NatixisTheme.TextInfo">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="NatixisTheme.TextInfo.Detail"  parent="@style/NatixisTheme.TextInfo">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">#000</item>

        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
    </style>

   <!-- <style name="NatixisTheme.DarkActionBAr" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/my_fancy_up_indicator</item>
    </style>-->
</resources>
